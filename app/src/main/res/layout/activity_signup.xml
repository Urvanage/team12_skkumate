<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D4033"
    tools:context=".Signup">


    <Button
        android:id="@+id/btnSendCode2"
        android:layout_width="62dp"
        android:layout_height="46dp"
        android:backgroundTint="#FFFFFF"
        android:text="SEND\nCODE"
        android:textColor="#1D4033"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/email2"
        app:layout_constraintEnd_toEndOf="@+id/fullName"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toTopOf="@+id/email2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/email2"
        app:layout_constraintStart_toStartOf="@+id/email" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone auth code"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/fullName2"
        app:layout_constraintStart_toStartOf="@+id/email" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Email auth code"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/emailcode"
        app:layout_constraintStart_toStartOf="@+id/emailcode" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Confirm password"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/confirmPassword"
        app:layout_constraintStart_toStartOf="@+id/confirmPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Password"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Email"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email" />

    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fullName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttno_all_round"
        android:hint="ID"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpTitle"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/fullName2"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttno_all_round"
        android:hint="Write phone auth code"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/fullName"
        app:layout_constraintTop_toBottomOf="@+id/email2"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/email"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttno_all_round"
        android:hint="Email"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/emailcode"
        app:layout_constraintTop_toBottomOf="@+id/fullName2"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttno_all_round"
        android:hint="Phone number"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/emailcode"
        app:layout_constraintTop_toBottomOf="@+id/fullName"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/btnSendCode"
        android:layout_width="62dp"
        android:layout_height="46dp"
        android:backgroundTint="#FFFFFF"
        android:text="SEND\nCODE"
        android:textColor="#1D4033"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/email"
        app:layout_constraintEnd_toEndOf="@+id/fullName"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toTopOf="@+id/email" />

    <EditText
        android:id="@+id/emailcode"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttno_all_round"
        android:hint="Write email auth code"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttno_all_round"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailcode"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttno_all_round"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FFFFFF"
        android:text="SIGN UP"
        android:textColor="#1D4033"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmPassword"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/loginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have an account? Log in"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/signUpButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="ID"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/fullName"
        app:layout_constraintStart_toStartOf="@+id/fullName" />

</androidx.constraintlayout.widget.ConstraintLayout>